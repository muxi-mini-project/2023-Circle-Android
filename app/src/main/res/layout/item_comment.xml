<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_comment"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/comment_shape"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/profile_pic_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#F5F5F5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:id="@+id/commenter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name_text"
                android:textSize="15dp"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_time_text"
                android:textSize="10dp"

                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="4">

            <Button
                android:id="@+id/delete_comment_button"
                android:layout_width="35dp"
                android:layout_height="14dp"
                android:background="@drawable/recyangle2"
                android:gravity="center"
                android:text="删除"
                android:textSize="10dp"
                android:textColor="#FF3737"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>